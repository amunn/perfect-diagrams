\newcommand\presperf[1]{%
\begin{tikzpicture}[perf]
\node[bar](LB) at (0,0) {|};
\node[bar](RB) at (4.5,0) {|};
\draw[dashed] (LB) -- node[below=8pt] {PTS} node[above,near end] {X} node[near start,above] {X}  (RB);
\node[above=3pt of LB]{LB};
\node[above=3pt of RB]{RB};
\node[below=3pt of LB]{#1};
\node[below=3pt of RB]{UT};
\end{tikzpicture}
}
